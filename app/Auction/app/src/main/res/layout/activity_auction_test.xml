<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/bid2">



                <LinearLayout
                    android:id="@+id/tab1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical" >

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        app:cardCornerRadius="15dp"
                        android:layout_marginTop="7dp"
                        android:backgroundTint="#FAF7F7">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TableRow
                                android:layout_width="282dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3dp"
                                android:gravity="center">

                                <ImageView
                                    android:id="@+id/im4"
                                    android:layout_width="40dp"
                                    android:layout_height="29dp"
                                    android:layout_marginLeft="1dp"
                                    android:layout_marginTop="1dp"
                                    android:layout_marginBottom="29dp"
                                    app:srcCompat="@drawable/ac4" />

                                <ImageView
                                    android:id="@+id/img1"
                                    android:layout_width="157dp"
                                    android:layout_height="90dp"
                                    android:layout_marginLeft="56dp"
                                    android:adjustViewBounds="true"
                                    android:scaleType="fitCenter" />

                            </TableRow>

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3dp"
                                android:gravity="center">

                                <TextView
                                    android:id="@+id/textView12"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:text="Auction for: "
                                    android:textColor="#131313"
                                    android:textSize="15dp"
                                    android:textStyle="italic" />

                                <TextView
                                    android:id="@+id/pronam"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:text="product name"
                                    android:textColor="#131313"
                                    android:textSize="15dp"
                                    android:textStyle="italic|bold" />

                            </TableRow>

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:gravity="center">


                                <TextView
                                    android:id="@+id/timer1"
                                    android:layout_width="38dp"
                                    android:layout_height="wrap_content"

                                    android:background="@drawable/tmr"
                                    android:textColor="@color/blue"
                                    android:textSize="19sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/timer"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:textColor="@color/blue"
                                    android:textSize="21sp"
                                    android:textStyle="bold|italic" />
                            </TableRow>

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3dp"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:orientation="horizontal">

                                <Button
                                    android:id="@+id/bt1"

                                    android:textSize="14dp"

                                    android:layout_width="58dp"
                                    android:layout_height="53dp"

                                    android:backgroundTint="#00C853"
                                    android:text="1 Call" />

                                <Button
                                    android:id="@+id/bt2"
                                    android:layout_width="58dp"
                                    android:layout_height="53dp"
                                    android:layout_marginLeft="55dp"
                                    android:backgroundTint="#FFD600"
                                    android:text="2  Call"
                                    android:textSize="13dp" />

                                <Button
                                    android:id="@+id/bt3"
                                    android:layout_width="58dp"
                                    android:layout_height="53dp"
                                    android:layout_marginLeft="55dp"

                                    android:backgroundTint="#D50000"
                                    android:text="3  Call"
                                    android:textSize="14dp" />
                            </TableRow>

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"

                                android:layout_marginTop="3dp"
                                android:layout_marginBottom="3dp"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/textView19"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Start bid:"
                                    android:textColor="#131313"
                                    android:textSize="15dp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/sprice"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dp"
                                    android:text="TextView"
                                    android:textColor="#131313" />

                                <TextView
                                    android:id="@+id/textView21"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="75dp"
                                    android:text="Current bid: "
                                    android:textColor="#131313"
                                    android:textSize="15dp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/cbid"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dp"
                                    android:text="TextView"
                                    android:textColor="#131313" />
                            </TableRow>
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <ListView
                        android:id="@+id/list_chat"
                        android:layout_width="match_parent"
                        android:layout_height="0dip"
                        android:divider="@null"
                        android:layout_weight="1" >
                    </ListView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"

                        >

                        <EditText
                            android:id="@+id/input_chat_message"
                            android:layout_width="0dip"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:layout_weight="1"
                            android:ems="10"
                            android:textColorHint="@color/black"
                            android:textColor="@color/black"
                            android:hint="Send your bid here">

                            <requestFocus />
                        </EditText>

                        <Button
                            android:id="@+id/button_chat_send"
                            android:layout_width="45dp"
                            android:layout_height="35dp"
                            android:background="@drawable/ic_baseline_send_24"
                            android:backgroundTint="#0091EA" />

                    </LinearLayout>
                </LinearLayout>


</LinearLayout>